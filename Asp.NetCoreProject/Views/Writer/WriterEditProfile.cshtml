@model EntityLayer.Concrete.Writer

@{
    ViewData["Title"] = "WriterEditProfile";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

@using (Html.BeginForm("WriterEditProfile", "Writer", FormMethod.Post))
{

    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p>@ViewBag.a</p>
                @if (ViewBag.a == 1)
                {
                    <h6>Bilgileriniz Güncellendi</h6>
                }
                <br />
                <h4 class="card-title">Yazar Profil Bilgileri Düzenleme</h4>
                @Html.HiddenFor(x => x.WriterID, new { @class = "form-control" })
                <br />
                <form class="forms-sample">

                    <div class="form-group">
                        <label for="exampleInputName1">Ad Soyad</label>

                        @Html.TextBoxFor(x => x.WriterName, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Mail</label>
                        @Html.TextBoxFor(x => x.WriterMail, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Şifre</label>
                        @Html.PasswordFor(x => x.WriterPassword, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Yazar Profil Fotoğrafı</label>
                        <input type="file" name="img[]" class="file-upload-default">
                        <div class="input-group col-xs-12">
                            <input type="text" class="form-control file-upload-info" disabled placeholder="Upload Image">
                            <span class="input-group-append">
                                <button class="file-upload-browse btn btn-gradient-primary" type="button">Görsel Yükle</button>
                            </span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="exampleTextarea1">Hakkımda</label>
                        @Html.TextAreaFor(x => x.WriterAbout, 10, 3, new { @class = "form-control" })
                    </div>
                    <button type="submit" class="btn btn-gradient-primary mr-2">Değişiklikleri Kaydet</button>
                    <button class="btn btn-light">İptal</button>
                </form>
            </div>
        </div>
    </div>

}
