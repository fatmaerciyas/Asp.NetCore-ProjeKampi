@using EntityLayer.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "BlogListByWriter";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}


<h1>Yazarın Blogları</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Blog Başlığı</th>
            <th scope="col">Oluşturulma Tarihi</th>
            <th scope="col">Kategori</th>
            <th scope="col">Durum</th>
            <th scope="col">Sil</th>
            <th scope="col">Düzenle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.BlogID</td>
                <td>@item.BlogTitle</td>
                <td>@(((DateTime)item.BlogCreateDate).ToString("dd-MMM-yyyy"))</td>
                <td>@item.Category.CategoryName</td>
                <td>
                    @if (item.BlogStatus)
                    {
                        <span class="badge badge-success">Aktif</span>
                    }
                    else
                    {
                        <span class="badge badge-secondary">Pasif</span>
                    }
                </td>
                <td><a href="/Blog/DeleteBlog/@item.BlogID" id="btn2" class="btn btn-danger">Sil</a></td>
                <td><a href="/Blog/EditBlog/@item.BlogID" class="btn btn-warning">Düzenle</a></td>


            </tr>
        }

    </tbody>

</table>
<td><a href="/Blog/AddBlog" class="btn btn-primary">Yeni Blog Oluştur</a></td>
